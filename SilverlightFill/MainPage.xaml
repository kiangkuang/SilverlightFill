<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="SilverlightFill.MainPage"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="600">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <InkPresenter Name="inkCanvas" Grid.Column="0" Width="Auto" Height="Auto"/>

        <sdk:GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Gray" ShowsPreview="True" Width="5"/>

        <StackPanel Grid.Column="2">
            <Button Click="clear">Clear</Button>
            <Button Name="fillButton" Click="fill">Fill</Button>
            <Grid Margin="0,10,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>

                <sdk:Label>Replacement</sdk:Label>
                <Rectangle Name="replaceBox" Fill="Red" Height="20" Width="20" Stroke="Gray" Grid.Column="1"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Button Height="30" Click="buttonRed">
                        <Rectangle Fill="Red" Height="30" Width="30"/>
                    </Button>
                    <Button Height="30" Click="buttonGreen">
                        <Rectangle Fill="Green" Height="30" Width="30"/>
                    </Button>
                    <Button Height="30" Click="buttonMagenta">
                        <Rectangle Fill="Magenta" Height="30" Width="30"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <Button Height="30" Click="buttonOrange">
                        <Rectangle Fill="Orange" Height="30" Width="30"/>
                    </Button>
                    <Button Height="30" Click="buttonBlue">
                        <Rectangle Fill="Blue" Height="30" Width="30"/>
                    </Button>
                    <Button Height="30" Click="buttonBlack">
                        <Rectangle Fill="Black" Height="30" Width="30"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Button Height="30" Click="buttonYellow">
                        <Rectangle Fill="Yellow" Height="30" Width="30"/>
                    </Button>
                    <Button Height="30" Click="buttonPurple">
                        <Rectangle Fill="Purple" Height="30" Width="30"/>
                    </Button>
                    <Button Height="30" Click="buttonWhite">
                        <Rectangle Fill="White" Height="30" Width="30"/>
                    </Button>
                </StackPanel>
            </Grid>

            <sdk:Label Margin="0, 10, 0, 0">Strokes: 0</sdk:Label>

        </StackPanel>


    </Grid>
</UserControl>
